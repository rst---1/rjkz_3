#==============================================================
set output "c.sh.Tau_zy при dy=0.75.png"
set xrange [LeftX:RightX]
set yrange [LeftY+(RightY-LeftY)*0.75:LeftY+(RightY-LeftY)*0.75+SectionDY]
set view 90,0
splot '/home/rst/deal.II/rjkz_2/Ftau.gpl' using 1:2:4
#==============================================================
set output "c.sh.Tau_zy при dy=1.png"
