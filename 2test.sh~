set bmargin 4
set ylabel "YY" font "Helvetica,18"
set xrange [LeftX:RightX]
set yrange [Cross_section_1:Cross_section_1+SectionDY]
set view 90,0
splot '/home/rst/deal.II/rjkz_2/Ftau.gpl' using 1:2:3
