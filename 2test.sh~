#! /usr/bin/gnuplot -persist
#векторно поле
#график функции U_z
#сечения Tau_zx по x
#сечения Tau_zy по y
LeftX = -0.5
RightX = 0.5
LeftY = -3.386363
RightY = 3.386363
Cross_section_1 = -3.386363
Cross_section_2 = -2.94318
Cross_section_3 = -2.10227
Cross_section_4 = -1.26136
Cross_section_5 = -0.42045
